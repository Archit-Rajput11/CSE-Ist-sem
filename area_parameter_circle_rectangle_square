// Program to find Area and Parameter of circle rectangle and square.
#include<stdio.h>
int main(){
    float area,side,par,length,width,radius;
    printf("Enter Radius: ");
    scanf("%f",&radius);
    area= 3.14* radius*radius;
    par= 2*3.14*radius;
    printf("Area of circle=%f\n",area);
    printf("Parameter of circle=%f\n",par);
    printf("Enter sides of square:");
    scanf("%f",&side);
    area= side*side;
    par=4*side;
    printf("Area of square=%.2f\n",area);
    printf("Parameter of square=%.2f\n",par);
    printf("Enter length and width of rectangle:");
    scanf("%f%f",&length,&width);
    area= length*width;
    par=2*(length+width);
    printf("Area of rectangle = %f\n",area);
    printf("Parameter of rectangle=%f",par);
    return 0;
}
